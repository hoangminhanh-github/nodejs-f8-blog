<div class='container'>
  <div class='row'>

    {{#each courses}}
      <div class='card mt-4 mf-8' style='width: 18rem;'>
        <a href='/courses/{{this.slug}}'>
          <img class='card-img-top' src={{this.image}} alt='Card image cap' />
        </a>
        <div class='card-body'>
          <a href='/courses/{{this.slug}}'>
            <h5 class='card-title'>{{this.name}}</h5>
          </a>
          <p class='card-text'>{{this.description}}</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>