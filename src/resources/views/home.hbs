{{#each courses}}
  <div class='container'>
    <div class='card mt-4' style='width: 18rem;'>
      <a href='/course/{{this.slug}}'>
        <img class='card-img-top' src={{this.image}} alt='Card image cap' />
      </a>
      <div class='card-body'>
        <a href='/course/{{this.slug}}'>
          <h5 class='card-title'>{{this.name}}</h5>
        </a>
        <p class='card-text'>{{this.description}}</p>
      </div>
    </div>
  </div>
{{/each}}