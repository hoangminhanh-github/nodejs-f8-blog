<div class='mt-4'>
  <h3>Thay đổi thông tin khóa học</h3>
  <form method='post' action='/courses/{{course._id}}/update?_method=PUT'>
    <div class='form-group'>
      <label>Name</label>
      <input name='name' value='{{course.name}}' type='text' class='form-control' placeholder='Name...' />
    </div>
    <div class='form-group'>
      <label>Description</label>
      <input
        name='description'
        value='{{course.description}}'
        type='text'
        class='form-control'
        placeholder='Description'
      />
    </div>
    <div class='form-group'>
      <label>VideoId</label>
      <input name='videoId' value='{{course.videoId}}' type='text' class='form-control' placeholder='VideoId...' />
    </div>
    <div class='form-group'>
      <label>Image</label>
      <input name='image' value='{{course.image}}' type='text' class='form-control' placeholder='Image...' />
    </div>
    <div class='form-group'>
      <label>Level</label>
      <input name='level' value='{{course.level}}' type='text' class='form-control' placeholder='Level...' />
    </div>

    <button type='submit' class='btn btn-primary'>Sửa khóa học</button>
  </form>
</div>